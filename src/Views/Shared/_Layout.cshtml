<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookVerse</title>
    <link rel="stylesheet" href="~/css/user-css/_layout.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="side-menu">
        <div class="menu-logo">
            <span class="logo-name">BookVerse  <i class='bx bx-book-reader'></i></span>
        </div>
        <ul class="menu-links">
            <li><a href="/Panel/Library" class="active"><i class='bx bx-library'></i><span class="link-name">Library</span></a></li>
            <li><a href="/Panel/Collections"><i class='bx bxs-collection'></i><span class="link-name">Collections</span></a></li>
            <li><a href="/Panel/CollectionsManager"><i class='bx bxs-add-to-queue'></i><span class="link-name">Collections Manager</span></a></li>
            <li><a href="#"><i class='bx bxs-cog'></i><span class="link-name">Settings</span></a></li>
            <li class="logout"><a href="/Panel/LogOut"><i class='bx bx-log-out'></i><span class="link-name">Log out</span></a></li>
        </ul>
    </div>
    <section class="main-section">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </section>
</body>
</html>
